@model CS.Common.Models.InputModels.ChallengeInputModel

<div class="well">

    @using (Html.BeginForm("PostNewChallenge", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-6">
                    @Html.EditorFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="col-lg-4">
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-6">
                    @Html.EditorFor(x => x.Description, new { @class = "form-control" })
                </div>
                <div class="col-lg-4">
                    @Html.ValidationMessageFor(x => x.Description)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.StartDate, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-6">
                    @Html.EditorFor(x => x.StartDate, new { @class = "form-control" })
                </div>
                <div class="col-lg-4">
                    @Html.ValidationMessageFor(x => x.StartDate)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.MinimumWordsRestriction, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-6">
                    @Html.EditorFor(x => x.MinimumWordsRestriction, new { @class = "form-control" })
                </div>
                <div class="col-lg-4">
                    @Html.ValidationMessageFor(x => x.MinimumWordsRestriction)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Reward, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-6">
                    @Html.EditorFor(x => x.Reward, new { @class = "form-control" })
                </div>
                <div class="col-lg-4">
                    @Html.ValidationMessageFor(x => x.Reward)
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    }

</div>